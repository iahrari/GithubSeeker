<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="repo" type="ir.iahrari.githubseeker.service.model.Repo"/>
    </data>
    <LinearLayout
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:layout_margin="4dp"
            android:orientation="vertical"
            android:padding="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageView
                android:contentDescription="@string/repo_lang_logo_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/repo_lang_logo"
                tools:src="@drawable/ic_kotlin"
                android:layout_margin="4dp"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/repo_name"
                android:drawableStart="@{(safeUnbox(repo.private))? @drawable/ic_locked: null}"
                android:text="@{repo.name}"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/titleColor"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                tools:text="Knights Tour"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{repo.language}"
                android:id="@+id/repo_language"
                android:textColor="@color/titleColor"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle2"
                tools:text="Kotlin"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/repo_description"
                android:text="@{repo.description}"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/titleColor"
                tools:text="This Project is Based On WarensDorf's rule"/>
    </LinearLayout>
</layout>